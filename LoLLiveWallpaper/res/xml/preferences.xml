<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Touch Services">
        <CheckBoxPreference
                android:key="touch"
                android:title="Touch Enabled"
                android:summary="Enable touch during preview" 
                android:defaultValue="true" />
    </PreferenceCategory>
    
    <PreferenceCategory
         android:title="Advanced">
    <EditTextPreference
                android:key="updatetimer"
                android:title="Frame refresh"
                android:summary="Control how fast or slow the animation will play"
                android:defaultValue="20" 
                android:inputType="number"/>
    <EditTextPreference
                android:key="actionrate"
                android:title="Action Rate"
                android:summary="Control how often an action will play, in seconds"
                android:defaultValue="120" 
                android:inputType="number"/>
    <EditTextPreference
                android:key="idlerate"
                android:title="Idle Rate"
                android:summary="Control how often an idle animation will play, in seconds"
                android:defaultValue="60" 
                android:inputType="number"/>
     </PreferenceCategory>

</PreferenceScreen>